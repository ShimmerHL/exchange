/* pages/ModifySetup/ModifySetup.wxss */
#ModifySetupHome{
  width: 100%;
  height: 100%;
}

.ModifySetupBorder{
  width: 100%;
  height: 30rpx;
  background-color: rgba(235, 228, 228, .5);
  box-shadow: 0rpx 10rpx 32rpx -30rpx #000 inset;
}

.ModifySetupBox view,picker{
  box-sizing: border-box;
  width: 100%;
  padding: 15rpx 55rpx 15rpx 35rpx;
  border-bottom: .5rpx solid rgba(235, 228, 228, .5);
}

.ModifySetupBox view text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}

.ModifySetupBox picker text{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}

.ModifySetupBox view text:nth-child(even){
  float: right;
  color: rgb(172, 165, 165);
}

.ModifySetupBox view input{
  float: right;
  height: 80rpx;
  line-height: 80rpx;
  color: rgb(172, 165, 165);
  z-index: 9999;
  text-align: right;
}

.ModifySetupBox view:nth-child(2) input{
  text-align: right;
  width: 300rpx;
}

.ModifySetupBox view:nth-child(5) input{
  width: 210rpx;
}

.ModifySetupBox picker text:nth-child(even){
  float: right;
  height: 80rpx;
  line-height: 80rpx;
  color: rgb(172, 165, 165);
  z-index: 9999;
}



.ModifySetupBox view:not(:first-child):hover{
  background-color: rgba(172, 165, 165, .3);
  transition: .3s linear;
}

.ModifySetupBox picker:hover{
  background-color: rgba(172, 165, 165, .3);
  transition: .3s linear;
}

.ModifySetupBox .Avatar{
    box-sizing: border-box;
}

.ModifySetupBox .Avatar image{
  width: 150rpx;
  height: 150rpx;
  margin-left: 440rpx;
  vertical-align:middle;
  border-radius: 50%;
}
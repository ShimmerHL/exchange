/* pages/RedemptionCode/RedemptionCode.wxss */
#RedemptionCodeHome {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 0 30rpx ;
}

#RedemptionCodeHome view {
  position: relative;
  padding: 20rpx 0;
  border-bottom: 1px solid rgb(235, 228, 228);
}

#RedemptionCodeHome view text:nth-child(1) {
  display: inline-block;
  width: 570rpx;
  vertical-align: middle;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

#RedemptionCodeHome view button {
  width: 100rpx;
  height: 50rpx;
  font-size: 25rpx;
  vertical-align: middle;
  color: red;
  border: 1px solid red;
}

#RedemptionCodeHome view text:nth-child(3) {
  position: absolute;
  right: 200rpx;
  top: 30rpx;
  font-size: 25rpx;
  color: red;
}
/* pages/personal/personal.wxss */
#PersonalBox .UserBox {
  box-sizing: border-box;
  width: 100%;
  height: 435rpx;
  padding-top: 70rpx;
  background-color: #1b90da;
}

#PersonalBox .UserBox image {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  margin-left: 50rpx;
  border-radius: 50%;
}

#PersonalBox .UserBox button {
  display: inline-block;
  width: 300rpx;
  margin: 0 0 35rpx -30rpx;
  border: 0;
}

#PersonalBox .ActionBar {
  box-sizing: border-box;
  width: 90%;
  height: 280rpx;
  margin: 100rpx auto 0;
  background-color: #fff;
  border: 1px solid rgb(235, 228, 228);
  /* box-shadow: 0 5rpx 5rpx rgb(235, 228, 228); */
}

#PersonalBox .ActionBar .ActionBarTop {
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 30rpx 76rpx 30rpx;
  font-size: 30rpx;
  border-bottom: 1px solid rgba(219, 212, 212, .3);
}

#PersonalBox .ActionBar .ActionBarTop text:nth-child(1) {
  float: left;
}

#PersonalBox .ActionBar .ActionBarTop text:nth-child(3) {
  float: right;
  color: rgb(170, 170, 170);
}

#PersonalBox .ActionBar .ActionBarTop image:nth-child(2) {
  float: right;
  margin: 5rpx 0 0 5rpx;
  width: 30rpx;
  height: 30rpx;
}

#PersonalBox .ActionBar .ActionBarBottom .ActionBarView {
  box-sizing: border-box;
  padding: 30rpx;
  float: left;
  width: 25%;
  text-align: center;
}

#PersonalBox .ActionBar .ActionBarBottom .ActionBarView image {
  position: relative;
  display: block;
  margin: auto;
  width: 70rpx;
  height: 70rpx;
}

#PersonalBox .ActionBar .ActionBarBottom .ActionBarView text {
  display: block;
  margin-top: 10rpx;
  font-size: 25rpx;
}

#PersonalBox .ActionBar .ActionBarBottom .NotShippedNumber {
  position: relative;
  top: -125rpx;
  right: -60%;
  width: 40rpx;
  height: 40rpx;
  font-size: 25rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: rgba(255, 0, 0, .8);
  color: #fff;
  border-radius: 50%;
}

#PersonalBox .BusinessUsers {
  box-sizing: border-box;
  padding: 200rpx 0 440rpx 42rpx;
  font-size: 33rpx;
  border-top: 1px solid rgb(235, 228, 228);
  /* box-shadow: 0 0rpx 23rpx rgb(235, 228, 228) inset; */
}

#PersonalBox .BusinessUsers view {
  box-sizing: border-box;
  width: 90%;
  padding: 10rpx 0 10rpx 20rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid rgb(235, 228, 228);
  vertical-align: middle;
}

#PersonalBox .BusinessUsers view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

#PersonalBox .BusinessUsers view text {
  margin-left: 30rpx;
  height: 40rpx;
  vertical-align: middle;
}

.EnterpriseLoginAndAdd {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 255, .2);
  z-index: 999;
}

.EnterpriseLoginAndAdd .Enterprise {
  position: relative;
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  padding: 30rpx 0;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
}

.EnterpriseLoginAndAdd .Enterprise input {
  width: 500rpx;
  margin: 30rpx auto 0;
  padding: 10rpx 0 10rpx 20rpx;
  font-size: 35rpx;
  border-bottom: 1px solid rgb(235, 228, 228);
  border-radius: 10rpx;
}

.EnterpriseLoginAndAdd .Enterprise .EnterpriseBtn button {
  display: inline-block;
  margin-top: 30rpx;
  width: 200rpx;
  background-color: rgba(0, 0, 255, .7);
  color: #fff;
}

.EnterpriseLoginAndAdd .Enterprise .EnterpriseBtn button:nth-child(1) {
  margin-right: 30rpx;
}

.EnterpriseLoginAndAdd .Enterprise .EnterpriseBtn button:nth-child(2) {
  margin-left: 30rpx;
}

.EnterpriseLoginAndAdd .Enterprise .AddBtn {
  box-sizing: border-box;
  position: absolute;
  padding: 15rpx 30rpx;
  font-size: 25rpx;
  background-color: #fff;
  border-radius: 15rpx;
}

.EnterpriseLoginAndAdd .Enterprise .AddBtnOne {
  top: -50rpx;
  left: 30rpx;
}

.EnterpriseLoginAndAdd .Enterprise .AddBtnTwo {
  top: -50rpx;
  right: 30rpx;
}